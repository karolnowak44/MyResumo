# Docker Compose Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ================================
# GitHub Copilot API Configuration
# ================================
# GitHub Personal Access Token for copilot-api service
# Get this from: https://github.com/settings/tokens
# Required scopes: repo, read:user
GH_TOKEN=your_github_token_here

# ================================
# MyResumo Application Configuration
# ================================
# OpenAI-compatible API key (can be placeholder when using copilot-api)
API_KEY=sk-placeholder

# API base URL for AI services
# Use copilot-api internal endpoint: http://copilot-api:4141
# Or external OpenAI: https://api.openai.com/v1
# Or Deepseek: https://api.deepseek.com/v1
API_BASE=http://copilot-api:4141

# AI model name to use
# For OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo
# For Deepseek: deepseek-chat, deepseek-coder
MODEL_NAME=gpt-3.5-turbo

# ================================
# Database Configuration
# ================================
# MongoDB connection string
# For local development: mongodb://admin:devpassword@mongodb:27017/myresumo_dev
# For production: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://admin:devpassword@mongodb:27017/myresumo_dev

# MongoDB root credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=devpassword
MONGO_INITDB_DATABASE=myresumo_dev

# ================================
# Redis Configuration
# ================================
# Redis password for cache authentication
REDIS_PASSWORD=devredispassword

# ================================
# Development Configuration
# ================================
# Set to true for development mode
DEBUG=false

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# ================================
# Production Configuration
# ================================
# Set these for production deployment
# MONGO_ROOT_PASSWORD=secure_production_password
# REDIS_PASSWORD=secure_redis_password
# API_KEY=your_production_openai_key
# DEBUG=false
# LOG_LEVEL=warning

# ================================
# Optional Configuration
# ================================
# Custom network subnet (default: 172.20.0.0/16)
# DOCKER_SUBNET=172.20.0.0/16

# Custom service ports (useful if you have conflicts)
# COPILOT_API_PORT=4141
# MYRESUMO_PORT=8080
# MONGODB_PORT=27017
# REDIS_PORT=6379